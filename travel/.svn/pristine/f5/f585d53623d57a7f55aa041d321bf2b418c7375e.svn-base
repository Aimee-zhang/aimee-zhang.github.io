@charset "utf-8";

#menu .menu-box {
  margin: 0 auto;
  width: 1190px;
  position: relative;
}

#menu .menu-box .menu-list-detail-box {
  position: absolute;
  z-index: 777;
  width: 260px;
  left: 0;
  top: 0;
  height: 460px;
  background-color: #165151;
  line-height: 1.5;
}

#menu .menu-box .menu-list-detail-box > ul {
  padding: 0 15px;
}
#menu .menu-box .menu-list-detail-box > ul > li {
  padding-top: 15px;
  padding-bottom: 15px;
  display: block;
  border-bottom: #fff 1px solid;
  cursor: pointer;
  position: relative;
}
#menu .menu-box .menu-list-detail-box > ul > li > a {
  font-size: 16px;
  color: #fff;
  position: relative;
  padding-left: 24px;
}
#menu .menu-box .menu-list-detail-box > ul > li > a i{
  position: absolute;
  left:0;
  top:3px;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-detail{
  display:none;
  position: absolute;
  width: 230px;
  background-color: #165151;
  right: -275px;
  top: 0;
  z-index: 777;
  padding: 10px 15px;
  border-left: 1px solid #fff;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-detail .menu-detail-title{
  font-size: 16px;
  color: #fff;
  margin-bottom: 5px;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-detail .menu-detail-box a{
  font-size: 14px;
  color: #fff;
  padding-right: 5px;
  display: inline-block;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-list-second {
  padding-top: 7px;
  font-size: 14px;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-list-second li {
  display: inline-block;
  line-height: 15px;
  padding: 0 5px;
  *float: left;
  *zoom: 1;
  *display: inline;
  white-space: nowrap;
  font-size: 14px;
  color: #fff;
  border-left: 1px solid #fff;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-list-second li.first{
  border-left: none;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-list-second li a {
  color: #fff;
}
#menu .menu-box .menu-list-detail-box > ul > li .menu-list-second li a:hover {
  color: #fff;
}
