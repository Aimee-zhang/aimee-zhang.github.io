#banner {
  position: relative;
  height: 460px;
  overflow: hidden;
  width: 100%;
  z-index: 77;
}
#banner .banner-box {
  height: 500px;
  text-align: center;
}
#banner .banner-box .banner-ctrl {
  position: absolute;
  width: 300px;
  right: 200px;
  bottom: 30px;
  height: 20px;
  z-index: 77;
  overflow: visible;
}

#banner .banner-box .banner-ctrl .banner-btn:hover {
  opacity: 1;
}
#banner .banner-box .banner-ctrl .menu_thumb {
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  left: 50%;
  margin-left: -380px;
}
#banner .banner-box .banner-ctrl .menu_thumb li {
  width: 40px;
  height: 4px;
  background: #fff \9;
  opacity: .6 \9;
  filter: alpha(opacity=60);
  background: rgba(255, 255, 255, 0.6);
  display: inline-block;
  *display: inline;
  margin-right: 10px;
  cursor: pointer;
  *float: left;
}
#banner .banner-box .banner-ctrl .menu_thumb li.on {
   background: #fff \9;
  opacity: 1 \9;
  filter: alpha(opacity=100);
  background: rgba(255, 255, 255, 1);

}
#banner .banner-box .banner-image {
  min-width: 1200px;
  height: 100%;
}
#banner .banner-box .banner-image ul {
  min-width: 1200px;
}
#banner .banner-box .banner-image ul li {
  min-width: 1200px;
}
#banner .banner-box .banner-image a {
  background: no-repeat center top;
  width: 100%;
  height: 100%;
  height: 500px;
  min-width: 1200px;
  display: block;
}